                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/textView582"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sophia loly"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/textView592"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="9823568999" />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/imageView542"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="150dp"
                            app:srcCompat="@drawable/groupcall" />

                        <ImageView
                            android:id="@+id/imageView552"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/phonecall" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

    </ScrollView>

</RelativeLayout>