<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:layout_marginTop="20dp"
    tools:context=".PaymentFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="180dp"
            android:background="@drawable/ovalpayment"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/layoutpa"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTotalIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:textSize="25sp"
                android:text="@string/income" />

            <TextView
                android:id="@+id/textView74"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:textSize="15sp"
                android:text="/month" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutpa"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView57"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/ovalpayment4"
                 />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:layout_marginLeft="10dp"
                android:text="Principal and interest" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView76"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:text="$" />


            <TextView
                android:id="@+id/txtPrincipalInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView571"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/ovalpayment3"
                />

            <TextView
                android:id="@+id/textView751"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#454555"
                android:text="Property Taxes: " />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/textView7511"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#454555"
                android:text="$ " />

            <TextView
                android:id="@+id/txtPropertyTaxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView572"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/ovalpayment2"
                />

            <TextView
                android:id="@+id/textView752"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:layout_marginLeft="10dp"
                android:text="Home Insurance" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView762"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:text="@string/principal_interest" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView573"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@drawable/ovalpayment1"
                />

            <TextView
                android:id="@+id/textView753"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#454555"
                android:text="Mortgage Insurance" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView763"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:text="@string/principal_interest" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView78"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:text="Price: $" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#454555"
                android:text="" />

            <ImageView
                android:id="@+id/imageView61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit" />

        </LinearLayout>
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-10dp"
            android:max="1000000"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:text="Down payment: $" />

            <TextView
                android:id="@+id/txtDownPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColor="#454555"
                android:text="" />

            <ImageView
                android:id="@+id/imageView613"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit" />

        </LinearLayout>
        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-10dp"
            android:max="1000000"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454555"
                android:text="Interest rate: $" />

            <TextView
                android:id="@+id/txtInterestRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#454555"
                android:text="" />

            <ImageView
                android:id="@+id/imageView614"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit" />

        </LinearLayout>
        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-10dp"
            android:max="1000000"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView81"
                android:layout_width="wrap_content"
                android:textColor="#454555"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="Remove Mortgage Ins." />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                />
        </LinearLayout>


    </LinearLayout>




</RelativeLayout>